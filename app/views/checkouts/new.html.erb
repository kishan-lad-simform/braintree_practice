<script src="https://pay.google.com/gp/p/js/pay.js"></script> 
 <script src="https://js.braintreegateway.com/web/3.97.2/js/client.min.js"></script> 
 <script src="https://js.braintreegateway.com/web/3.97.2/js/google-payment.min.js"></script>
 
<div class="container-sm center">
  <div class="card">
    <div class="card-body">
      <div class="wrapper">
        <div class="checkout container">
          <div class="content">
            <header>
              <h1>Ticket Payment</h1>
              <p>
                Select Your Payment method
              </p>
            </header>
            <%= form_with url: "/checkouts", id: "payment-form" do |form| %>
              <section>
                <label for="amount">
                  <%= form.label 'Amount', class: "input-label" %> 
                  <div class="input-wrapper amount-wrapper">
                    <%= form.text_field :price, 
                      value: @price, 
                      class: "form-control-plaintext", 
                      readonly: true %>
                  </div>
                </label>
                <div class="bt-drop-in-wrapper">
                  <div id="bt-dropin"></div>
                </div>
              </section>
              <%= form.hidden_field :movie_id, value: @movie.id %>
              <%= form.hidden_field :payment_method_nonce, id: "nonce" %>
              <%= button_to 'Test Transcation', class: 'btn btn-Primary', type: "submit" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://js.braintreegateway.com/web/dropin/1.30.0/js/dropin.min.js"></script>


<script>
var form = document.querySelector('#payment-form');
var client_token = "<%= @client_token %>";


braintree.dropin.create({
  authorization: "<%= @client_token %>",
  container: '#bt-dropin',
  // googlePay: {
  //   googlePayVersion: 2,
  //   merchantId: 'your_braintree_merchant_id', // Use the Merchant ID obtained from Braintree
  //   transactionInfo: {
  //     totalPriceStatus: 'FINAL',
  //     totalPrice: '<%= @price %>',
  //     currencyCode: 'USD'
  //   }
  // }
}, function (createErr, instance) {
    form.addEventListener('submit', function (event) {
      event.preventDefault();
      instance.requestPaymentMethod(function (err, payload) {
        if (err) {
          console.log('Error', err);
          return;
        }
        // Add the nonce to the form and submit
        document.querySelector('#nonce').value = payload.nonce;
        form.submit();
      });
    });
  });
</script>

