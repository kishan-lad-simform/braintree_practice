<%= form_with model: @movie do |form| %>
  <div class="container">
    <h1>Add Movie</h1>
    <div class="row">  
      <div class="col-4">
        <%= form.label :movie_name %><br>
        <%= form.text_field :movie_name, class: "form-control" %>
      </div>
    </div><br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :price %><br>
        <%= form.text_field :price, class: "form-control" %>
      </div>
    </div> <br/>

    <div class="row">
      <div class="col-4">
        <%= form.label 'Movie Image' %><br>
        <%= form.file_field :movie_image %>
      </div>
    </div> <br/>

    <div>
      <%= form.submit "Insert data", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
