<center>
  <b> Welcome <%= current_user.email %> </b> &nbsp;&nbsp;
  <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete } %> <br>
  <table border=1>
    <thead>
      <tr>  
        <th>Id</th>
        <th>Movie</th>
        <th>Name</th>
        <th>Price</th>
        <th>Ticket Left</th>
        <th>show_time</th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td> <%= movie.id %> </td>
          <td> <%= image_tag movie.movie_image.url, size: '100x100' %> </td>
          <td> <%= movie.movie_name %> </td>
          <td> <%= movie.price %> </td>
          <td> <%= movie.quantity %> </td>
          <td> <%= time_convert(movie.show_time) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table> 
</center>
